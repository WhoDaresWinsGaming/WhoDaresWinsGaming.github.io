#!/bin/bash

# ip-update
# 	(C) XENXIER 2015 - ALL RIGHTS ETC

# Git Stuff
git pull
git checkout ip

# If the IP in the file is not our current IP
if [cat my_ip != curl 'http://www.wtfismyip.com/text'] then
	# Save the new IP and current time
	curl 'http://www.wtfismyip.com/text' > ip
	date +%s > time

	# Update using Git
	git add ip
	git add time
	git commit -m 'Update IP'
	git push origin ip
fi
